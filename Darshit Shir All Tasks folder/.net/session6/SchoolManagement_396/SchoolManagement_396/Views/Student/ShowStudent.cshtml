@model IEnumerable<SchoolManagement_396.Models.Contex.SP_GetStudentDetails_Result>

@{
    ViewBag.Title = "ShowStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center mt-3">
    <button class="btn bg-success">
        @Html.ActionLink("Add Student", "AddStudent", "Student", new { @class = "text-decoration-none text-dark" })
    </button>
</div>


<table class="table table-striped mt-3">
    <tr class="bg-dark text-light">
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
        <th>
            Address
        </th>
        <th>
            Mobile No.
        </th>
        <th>
            Teacher
        </th>
        <th>
            Country Name
        </th>
        <th>
            State Name
        </th>
        <th>
            City Name
        </th>
        <th>
            Action
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MobileNo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TeacherName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CountryName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StateName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CityName)
    </td>
    <td>
        <button class="btn bg-info">@Html.ActionLink("Edit", "EditStudent", new { id = item.Id }, new { @class = "text-decoration-none text-dark" })</button>
        <button class="btn bg-danger">
            @Html.ActionLink("Delete", "DeleteStudent", new { id = item.Id },
  new { onclick = "return confirm('Do you really want to delete this?')", @class = "text-decoration-none text-dark" })
    </button>
</td>
</tr>
}

</table>
